{
  "mcpServers": {
    "openai_codex": {
      "command": "npx",
      "args": [
        "-y",
        "@openai/codex",
        "--approval-mode",
        "auto-edit"
      ],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      },
      "config": {
        "defaultTimeout": 60000,
        "maxRetries": 3
      }
    }
  }
}